@model BOMLink.Models.Supplier

@{
    ViewData["Title"] = "Edit Supplier";
}

<div class="container mt-4">
    <h2>Edit Supplier</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Supplier Name</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ContactEmail" class="form-label">Contact Email</label>
            <input asp-for="ContactEmail" class="form-control" required />
            <span asp-validation-for="ContactEmail" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SupplierCode" class="form-label">Supplier Code</label>
            <input asp-for="SupplierCode" class="form-control" required />
            <span asp-validation-for="SupplierCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ContactName" class="form-label">Contact Name</label>
            <input asp-for="ContactName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ContactPhone" class="form-label">Contact Phone</label>
            <input asp-for="ContactPhone" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Address" class="form-label">Address</label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="City" class="form-label">City</label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Province" class="form-label">Province</label>
            <input asp-for="Province" class="form-control" />
        </div>
        <button type="submit" class="btn btn-outline-primary">Save</button>
        <a href="@Url.Action("Index", "Supplier")" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>
