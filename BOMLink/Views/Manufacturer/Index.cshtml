<!-- Manufacturer Index View -->
@model BOMLink.ViewModels.ManufacturerViewModel

@{
    ViewData["Title"] = "Manufacturers";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sidebar Section -->
        <aside class="col-md-3">
            <div class="card shadow-sm p-3">
                <h5 class="fw-bold">Actions</h5>

                <!-- Add, Export, and Import Buttons -->
                <a href="@Url.Action("Create", "Manufacturer")" class="btn btn-outline-primary w-100 mb-2">Add Manufacturer</a>
                <a href="@Url.Action("ExportToCSV", "Manufacturer")" class="btn btn-outline-warning w-100 mb-2">Export to CSV</a>
                <a href="@Url.Action("ExportToExcel", "Manufacturer")" class="btn btn-outline-success w-100 mb-3">Export to Excel</a>

                <!-- Import Form -->
                <form asp-action="Import" asp-controller="Manufacturer" method="post" enctype="multipart/form-data">
                    <label class="form-label fw-bold">Import Manufacturers</label>
                    <div class="input-group">
                        <input type="file" class="form-control" name="file" required>
                        <button type="submit" class="btn btn-outline-secondary">Import</button>
                    </div>
                </form>
            </div>
        </aside>

        <!-- Main Content Section -->
        <main class="col-md-9">
            <h2>Manufacturers</h2>

            <!-- Search Form -->
            <form method="get" class="mb-3">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search by Name" value="@Model.SearchTerm">
                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                </div>
            </form>

            <table class="table mt-3">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a href="@Url.Action("Index", new { sortBy = "name", sortOrder = Model.SortOrder == "asc" ? "desc" : "asc", searchTerm = Model.SearchTerm })">
                                Name
                            </a>
                        </th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var manufacturer in Model.Manufacturers)
                    {
                        <tr>
                            <td>@manufacturer.Name</td>
                            <td class="text-end">
                                <!-- Edit Icon -->
                                <a href="@Url.Action("Edit", "Manufacturer", new { id = manufacturer.Id })" class="text-warning me-3" data-bs-toggle="tooltip" title="Edit Manufacturer">
                                    <i class="fa-solid fa-edit"></i>
                                </a>

                                <!-- Delete Icon (With Confirmation) -->
                                <form asp-action="Delete" asp-route-id="@manufacturer.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this manufacturer?');">
                                    <button type="submit" class="btn btn-link text-danger p-0 border-0" data-bs-toggle="tooltip" title="Delete Manufacturer">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </main>
    </div>
</div>